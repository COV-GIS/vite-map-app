{
  "name": "vite-map-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "node ./scripts/postinstall.js",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "serve": "vite preview",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/COV-GIS/vite-map-app.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/COV-GIS/vite-map-app/issues"
  },
  "homepage": "https://github.com/COV-GIS/vite-map-app#readme",
  "devDependencies": {
    "@types/luxon": "^3.3.0",
    "@types/page": "^1.11.6",
    "@types/papaparse": "^5.3.7",
    "@types/tabulator-tables": "^5.4.8",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "ansi-regex": ">=6.0.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fs-extra": "^11.1.1",
    "prettier": "^3.0.0",
    "replace-in-file": "^7.0.1",
    "sass": "^1.63.6",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "vite": "4.4.4"
  },
  "dependencies": {
    "@arcgis/core": "^4.27.6",
    "@esri/calcite-components": "^1.4.3",
    "@vernonia/core": "^2.2.1",
    "@vernonia/map-application": "^1.0.21",
    "luxon": "^3.3.0",
    "page": "^1.11.6",
    "papaparse": "^5.4.1",
    "tabulator-tables": "^5.5.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "vite.config.js",
      "package-lock.json",
      "dist/**",
      "node_modules/**",
      "scripts/**",
      "src/public/**"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto"
  }
}
