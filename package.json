{
  "name": "vite-map-app",
  "version": "1.0.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "node ./scripts/sass-replace.js",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "serve": "vite preview",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/COV-GIS/vite-map-app.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/COV-GIS/vite-map-app/issues"
  },
  "homepage": "https://github.com/COV-GIS/vite-map-app#readme",
  "devDependencies": {
    "@types/luxon": "^3.3.0",
    "@types/page": "^1.11.5",
    "@types/papaparse": "^5.3.7",
    "@types/tabulator-tables": "^5.4.6",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "ansi-regex": ">=6.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "prettier": "^2.8.7",
    "replace-in-file": "^6.3.5",
    "sass": "^1.60.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3",
    "vite": "4.2.1",
    "vite-plugin-ejs": "^1.6.4"
  },
  "dependencies": {
    "@arcgis/core": "^4.26.5",
    "@esri/calcite-components": "^1.2.0",
    "@vernonia/core": "^2.1.13",
    "@vernonia/map-application": "^1.0.6",
    "luxon": "^3.3.0",
    "page": "^1.11.6",
    "papaparse": "^5.4.1",
    "tabulator-tables": "^5.4.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "vite.config.js",
      "package-lock.json",
      "dist/**",
      "node_modules/**",
      "scripts/**",
      "src/public/**"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto"
  }
}
